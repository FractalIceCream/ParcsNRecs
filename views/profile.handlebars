<div class="columns is-multiline">
  {{#each data as |park|}}
  <div class="card column is-one-third">
    <div class="card-image">
      <figure class="image is-4by3">
        <img src="{{park.images.[0].url}}" alt="Placeholder image">
      </figure>
    </div>
    <div class="card-content">
      <div class="media-content">
        <a href="{{park.url}}" class="title is-4">{{park.fullName}}</a>
      </div>
    </div>
    <div class="content">
      {{park.description}}
      <br>
      <a href="{{park.directionsUrl}}">Directions</a>
      <br>
      {{!-- <time datetime="2016-1-1">{{parks.operatingHours.[0].standardHours}}</time> --}}
      <button type="submit" class="button add-favorites" data-parkCode="{{park.parkCode}}"
        data-name="{{park.fullName}}">Add to Favorites</button>
    </div>
  </div>
  {{/each}}
</div>
<script src="/js/favorites.js"></script>